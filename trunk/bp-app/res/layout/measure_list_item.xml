<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:paddingLeft="8dp"
	android:paddingRight="8dp">

	<include android:id="@+id/header_override" layout="@layout/measure_list_header_row"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<ListView android:id="@id/android:list" android:layout_width="match_parent"
		android:layout_height="match_parent" android:drawSelectorOnTop="false" />

	<Button android:id="@+id/new_measure_button"
		android:layout_width="240px" android:layout_height="wrap_content"
		android:text="New Blood Pressure Measure"
		android:layout_alignParentBottom="true" />

</LinearLayout>
 